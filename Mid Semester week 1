Implementing the student class

#include <iostream>
#include <string>
#include <vector>

using namespace std;

class Student {
private:
    string name;
    string indexNumber;

public:
    // Constructor
    Student(string n, string id) : name(n), indexNumber(id) {}

    // Getters
    string getName() const { return name; }
    string getIndexNumber() const { return indexNumber; }

    // Display student details
    void display() const {
        cout << "Index: " << indexNumber << " | Name: " << name << endl;
    }
};


Student Class Header

#ifndef STUDENT_H
#define STUDENT_H

#include <string>
#include <iostream>

class Student {
private:
    std::string name;
    std::string indexNumber;

public:
    // Constructor to initialize student details
    Student(std::string n, std::string id) : name(n), indexNumber(id) {}

    // Method to display student info [Requirement 5.1.2]
    void display() const {
        std::cout << "Index: " << indexNumber << " | Name: " << name << std::endl;
    }

    // Getter for searching by index [Requirement 5.1.3]
    std::string getIndexNumber() const { return indexNumber; }
};

#endif


The Main Application Logic 

#include <iostream>
#include <vector>
#include <string>
#include "Student.h"

using namespace std;

void showMenu() {
    cout << "\n--- Digital Attendance System (Week 1) ---\n";
    cout << "1. Register Student\n";
    cout << "2. View All Students\n";
    cout << "3. Search Student by Index\n";
    cout << "4. Exit\n";
    cout << "Enter choice: ";
}

int main() {
    vector<Student> database; // Temporary storage for Week 1
    int choice;

    while (true) {
        showMenu();
        cin >> choice;
        cin.ignore(); // Clear buffer

        if (choice == 1) {
            string name, id;
            cout << "Enter Name: "; getline(cin, name);
            cout << "Enter Index Number: "; getline(cin, id);
            database.push_back(Student(name, id));
            cout << "Student registered successfully!\n";
        } 
        else if (choice == 2) {
            cout << "\n--- Registered Students ---\n";
            for (const auto& s : database) s.display();
        }
        else if (choice == 4) break;
    }
    return 0;
}
